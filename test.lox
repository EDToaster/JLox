// It should know which instance the sayName method was hoisted from
class Person {
  init(name) {
    this.name = name;
  }

  sayName() {
    print(this.name);
  }
}

var jane = Person("Jane");
var bill = Person("Bill");

bill.sayName = jane.sayName;
bill.sayName(); // should say "Jane"

